{
    "manifest_version": 3,
    "name": "YouTube Speed Booster",
    "version": "1.0",
    "description": "Set YouTube video playback speed to 3x instantly!",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["*://www.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_title": "Set Speed to 3x"
    }
}
